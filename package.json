{
	"name": "loom-ui",
	"private": true,
	"description": "A collection of UI packages for svelte and sveltekit",
	"workspaces": [
		"packages/*",
		"storybook"
	],
	"scripts": {
		"build": "pnpm -r build",
		"lint": "pnpm -r lint",
		"lint:fix": "pnpm -r lint:fix",
		"test": "pnpm -r test",
		"test:ci": "pnpm -r test:ci",
		"storybook": "pnpm -r storybook",
		"build:storybook": "pnpm -r build:storybook",
		"package": "pnpm -r package",
		"prepublishOnly": "pnpm -r prepublishOnly"
	},
	"devDependencies": {
		"@types/eslint": "^8.56.7",
		"@typescript-eslint/eslint-plugin": "^7.5.0",
		"@typescript-eslint/parser": "^7.5.0",
		"publint": "^0.2.7",
		"typescript": "^5.4.4",
		"vite": "^5.2.8",
		"vitest": "^1.4.0"
	}
}
